@model IEnumerable<Category>

@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <h3>Welcome Dear @User.Identity.Name</h3>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">Welcome To Your Job Offer Application And Choose Your Career</a>.</p>
</div>


  @foreach (var category in Model)
  { 
        <div class="tab-pane">
                 <h1>@category.Name</h1>
                 <h5 class="lead">@category.Description</h5>

               <div class="row">
                  @foreach (var job in category.Jobs)
                  {
                        <div class="col-md-3 img-thumbnail" style="margin-left:20px;margin-bottom:30px">
                          <img src="~/Images/Jobs/@job.Image" width="100" height="100" />
                          <h3>@job.Title</h3>
                          <h5>@job.Content</h5>
                          <a class="btn btn-info" asp-controller="Home" asp-action="Details" asp-route-id="@job.Id">Details</a>
                        </div>
                   }
               </div>
        </div>
    }


  
